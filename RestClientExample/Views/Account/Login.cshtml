@model RestClientExample.Models.LoginModel

@{
    ViewBag.Title = "Login";
    
}

<hgroup class="title container text-center" >
    <h1 >@ViewBag.Title</h1>
</hgroup>
<style> 
.panel-title { 
    background:  rgb(0, 102, 204); border-radius: 5px 5px 5px 5px;
    }
       #button {
        height:3em;   
        width: 21em;
    }
</style>
  
<section id="loginForm">
    
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

        <div class="container">   
        <hr/> 
       <div class="row vertical-offset-100">
        <div id="loginbox"  class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
            <div class="panel panel-info text-center" >
                    <div class="panel-heading">
                        <div class="panel-title"><p>Please Sign In</p></div>                        
                    </div>     
    <fieldset>
        <legend>Formulario de inicio de sesión</legend>
        <ol>                    
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName) 
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password) 
                @Html.ValidationMessageFor(m => m.Password)
            </li>
           
        </ol>
        <center><input id="button" class="btn btn-large btn-success btn-block"  type="submit" value="Sign in" /></center>
            
    
    </fieldset>
             </div>
            </div> 
          </div>
              </div>  
    
    <p>        
       Don't have an account! @Html.ActionLink("Sign Up", "Register")         
    </p>   
} 
</section> 
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


               
