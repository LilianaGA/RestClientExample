@{
    ViewBag.Title = "Post-Man";
}


<form class="form-horizontal">
    <fieldset>
        <legend>Add New:</legend>
        <div class="container">

            <div class="editor-label">
                <span class="label label-default">Name.: |</span>
                <input class="input-small" id="name" name="name" />
            </div>
            <div class="editor-label">
                <span class="label label-primary">UrlBas: |</span>
                <input id="url" name="url" size="15" />
            </div>
            <div class="editor-label">
                <span class="label label-default">Action: |</span>
                <input id="action" name="action" />
                <span class="label label-default">Http Verb: |</span>
                <select>
                    <option value="GET">GET</option>
                    <option value="POST">POST</option>
                </select>
            </div>
<hr />
        </div>
    </fieldset>


<script src="@Url.Content("~/Scripts/Javascript/create.js")" type="text/javascript"></script>

<div class="btn-group">
  <h2>Iterations</h2>
  <button type="button" class="btn btn-default">New</button>
  <button type="button" class="btn btn-default">Remove</button>
  <button type="button" class="btn btn-default">Run</button>
</div>
<hr />  
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading text-center">
                    <h3 class="panel-title">Iterations</h3>
                </div>
                <table class="table table-striped custab">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>URl Base</th>
                            <th>Action</th>
                            <th>Action</th>
                            <!--<th class="text-center">Action</th>-->

                        </tr>
                    </thead>
                    @foreach (var item in ViewBag.requests)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.UrlBase</td>
                            <td>@item.Action</td>
                            <td>@Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>

    </div>
</div>
</form>

